/* 首页照片墙部分 */
.avatar{
  display: block;
  width: 90%;
  margin-left: auto;
  margin-right: auto;
  position: fixed;
  bottom: 0;
}

.cover-info{
  position: absolute;
  left: 25px;
  top: 30px;
}

.cover-name{
  font-size: 30px;
  font-weight: bold;
  display: block;
  letter-spacing: 1px;
}

.big-circle {
  background-color: rgba(0, 165, 34, 0.7);
  width: 260px;
  height: 260px;
  border-radius: 130px;
  position: absolute;
  left: -150px;
  top: 110px;
}

.medium-circle {
  background-color: rgba(0, 165, 34, 0.7);
  width: 160px;
  height: 160px;
  border-radius: 130px;
  position: absolute;
  right: -90px;
  top: 110px;
}

.small-circle {
  background-color: rgba(0, 165, 34, 0.7);
  width: 50px;
  height: 50px;
  border-radius: 25px;
  position: absolute;
  left: -20px;
  bottom: 20px;
}

.cover-work {
  position: absolute;
  bottom: 80px;
  text-align: center;
  background-color: rgba(0,0,0,0.2);
  padding: 20px 0;
  width: 100%;
}

.cover-job {
  display: block;
  color: white;
  font-size: 30px;
  font-weight: bold;
}

.cover-exp {
  display: block;
  color: white;
  font-size: 15px;
}

.navigation{
  position: absolute;
  top: 20px;
  right: 10px;
  font-size: 20px;
}

.arrow-right{
  width: 20px;
  height: 20px;
  vertical-align: -5px;
}

/* 简历内容部分 */

.resume {
  margin: 0 20px;
}
.sectoin {

}
.section-info {
  display: flex;
  border-bottom: 1px solid #333;
  padding-bottom: 5px;
  margin: 10px 0;
}

.section-seq {
  background-color: #444;
  width: 22px;
  height: 22px;
  color: white;
  text-align: center;
  line-height: 22px;
  margin-right: 10px;
}

.sectoin-title {
  font-size: 20px;
}

.column {
  font-size: 16px;
  border-bottom: dashed 1px #333;
  padding: 5px 0;
}

.sectoin {
  padding-bottom: 30px;
}

.info {
  display: block;
}

.col-2 {
  column-count: 2;
}

.col-1 {
  column-count: 1;
}

/* 技能部分 */

.skill {
  padding: 5px 0;
}

.skill-name {
  font-size: 16px;
  display: block;
  margin-bottom: 5px;
}

/* 教育经历部分 */

.education, .work, .project, .remarks {
  border-bottom: dashed 1px #999;
  padding-bottom: 6px;
}
.education:last-of-type {
  padding-bottom: 0;
  border-bottom: none;
}

.work:last-of-type {
  padding-bottom: 0;
  border-bottom: none;
}

.project:last-of-type {
  padding-bottom: 0;
  border-bottom: none;
}

.remarks:last-of-type {
  padding-bottom: 0;
  border-bottom: none;
}

.school, .company, .project-name {
  font-size: 16px;
  margin: 8px 0;
}

.icon-school{
  width: 26px;
  height: 26px;
  vertical-align: -6px;
  margin-right: 5px;
}

.row {
  display: flex;
  justify-content: space-between;
}

.info {
  font-size: 16px;
  margin-bottom: 10px;
}

.icon-book, .icon-calendar {
  width: 16px;
  height: 16px;
  vertical-align: -2px;
  margin-right: 3px;
}

.desc {
  color: #999;
  line-height: 1.5;
}

.page {
  display: block;
  width: 100%;
  text-align: center;
  font-size: 16px;
  padding-top: 15px 0;
  position: absolute;
  bottom: 0;
}

.icon-company {
  width: 22px;
  height: 22px;
  vertical-align: -4px;
  margin-right: 5px;
}

.icon-job {
  width: 18px;
  height: 18px;
  vertical-align: -4px;
  margin-right: 3px;
}

.icon-computer {
 width: 26px;
 height: 26px;
 vertical-align: -6px;
 margin-right: 5px; 
}

.icon-stack {
  width: 12px;
  height: 12px;
  margin: 0 10px;
  vertical-align: -2px;
}

.project-stack {
  font-size: 16px;
  word-break: break-all;
}



